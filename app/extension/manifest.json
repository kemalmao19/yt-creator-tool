{
  "manifest_version": 3,
  "name": "Youtube Creator Tool",
  "description": "This is an extension to help creator serve their content more professional",
  "version": "1.0",
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./popup/hello_popup.png"
  },
  "background": {
    "service_worker": "./background/bg.js"
  },
  "content_scripts": [
    { "matches": ["https://*.youtube.com/*"], "js": ["content/content.js"] }
  ],
  "permissions": ["storage", "tabs", "activeTab"]
}
